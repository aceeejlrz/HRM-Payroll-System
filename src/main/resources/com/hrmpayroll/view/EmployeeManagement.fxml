<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Employee Management"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField"
                   promptText="Search employees..."
                   prefWidth="300"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="refreshBtn" text="ðŸ”„ Refresh"/>
    </HBox>

    <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idCol" text="Employee ID" prefWidth="120"/>
            <TableColumn fx:id="nameCol" text="Full Name" prefWidth="200"/>
            <TableColumn fx:id="deptCol" text="Department" prefWidth="150"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="250"/>
            <TableColumn fx:id="phoneCol" text="Phone" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="addBtn" text="âž• Add Employee"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button fx:id="editBtn" text="âœï¸ Edit Employee"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button fx:id="deleteBtn" text="ðŸ—‘ï¸ Delete Employee"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>
</VBox>
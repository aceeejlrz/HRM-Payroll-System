<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Reports & Analytics"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Department:"/>
        <ComboBox fx:id="deptCombo" prefWidth="200"/>
        <Label text="Period:"/>
        <ComboBox fx:id="periodCombo" prefWidth="150"/>
        <Button fx:id="generateBtn" text="Generate Report"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

    <TabPane fx:id="reportTabs" VBox.vgrow="ALWAYS">
        <Tab text="Summary">
            <TextArea fx:id="summaryText" editable="false"
                      style="-fx-font-family: monospace; -fx-font-size: 12px;"/>
        </Tab>
        <Tab text="Analytics">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <AnchorPane fx:id="chartPane" minHeight="500"/>
            </ScrollPane>
        </Tab>
    </TabPane>
</VBox>